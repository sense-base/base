{
	"name": "base ROS2 with cuda-12.6.0-devel-ubuntu24.04",
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".."
	},
	"workspaceMount": "source=${localWorkspaceFolder}/workspace,target=/workspace/,type=bind", 
	"workspaceFolder": "/workspace",
	"containerEnv": {
		"DISPLAY": "${localEnv:DISPLAY}",
		"XAUTHORITY": "/root/.Xauthority",
		"NVIDIA_DRIVER_CAPABILITIES": "all"
		},
	"runArgs": [
		"--rm",
		"--shm-size=32g",
		"--device", "nvidia.com/gpu=all",
		"--security-opt=label=disable",
		// "--device-cgroup-rule=c *:* rmw",
		// "--device-cgroup-rule=c 189:* rwm",
		// "--runtime=nvidia",
		// "--gpus=all",
		"--volume=/tmp/.X11-unix:/tmp/.X11-unix",
		"--volume=${localEnv:XAUTHORITY}:/root/.Xauthority"
	],
	"remoteUser": "root",
	"containerUser": "root",
	"postStartCommand": "git config --global --add safe.directory /workspaces/${localWorkspaceFolderBasename}",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-iot.vscode-ros",
				"charliermarsh.ruff",
				"vscodevim.vim",
				"ms-python.python",
				"ms-toolsai.datawrangler",
				"ms-python.debugpy",
				"ms-toolsai.jupyter",
				"ms-toolsai.jupyter-keymap",
				"Github.copilot"
			]
		}
	}
}